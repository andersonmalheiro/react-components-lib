{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "baseUrl": "src/"
  },
  "include": ["src/**/*.ts", "src/jest.config.js"],
  "exclude": ["node_modules"]
}
